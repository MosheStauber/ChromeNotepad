{
    "manifest_version": 2,
    "name": "WebNotes",
    "version": "1.0",
    "description": "Annotate specific webpages or domains for later visits",
    /*"icons": { "128": "icon_128.png" },*/
    "background": {
        "persistent": false,
        "scripts": ["bg.js"]
    },
    "permissions": [
        "activeTab",
        "storage"
     ],
    "browser_action": {
        "default_title": "WebNotes",
        /*"default_icon": "icon_19.png",*/
        "default_popup": "popup.html"
    }
}
